I2C_HandleTypeDef hi2c2;

TIM_HandleTypeDef htim1;

UART_HandleTypeDef huart5;
UART_HandleTypeDef huart7;
USART_HandleTypeDef husart3;

/* USER CODE BEGIN PV */
uint8_t regData[10];
int sonic_data;
int TimerPeriod;

uint8_t buf[3];
buf[0] = 0xE;
buf[1] = 0x2A;
buf[2] = 0x38;
/* USER CODE END PV */

